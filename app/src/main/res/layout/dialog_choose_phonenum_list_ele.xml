<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/dialogChoosePhoneListLayout"
    android:padding="15dp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dialogChoosePhoneListItemNumberType"
        android:text="Number type"
        android:textColor="#ff000000"
        android:layout_centerVertical="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dialogChoosePhoneListItemNumber"
        android:layout_toRightOf="@id/dialogChoosePhoneListItemNumberType"
        android:layout_toEndOf="@id/dialogChoosePhoneListItemNumberType"
        android:text="123 456 7890"
        android:textColor="#ff000000"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dialogChoosePhoneListRadioButton"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        />
</RelativeLayout>