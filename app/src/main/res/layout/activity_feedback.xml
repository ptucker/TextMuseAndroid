<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ui.FeedbackActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/feedbackActivityLayoutTop"
        >

        <EditText
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:id="@+id/feedbackActivityEditTextName"
            android:hint="Name (optional)"
            android:layout_marginRight="8dp"
            android:inputType="textCapWords"
            />

        <EditText
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:id="@+id/feedbackActivityEditTextEmail"
            android:hint="Email (optional)"
            android:layout_marginLeft="8dp"
            android:inputType="textEmailAddress"
            />
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/feedbackActivityEditTextFeedback"
        android:layout_below="@+id/feedbackActivityLayoutTop"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="What's on your mind?"
        android:gravity="top"
        android:layout_marginTop="16dp"
        />


</RelativeLayout>
