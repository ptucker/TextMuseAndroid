<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gotBadgeBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/explorer_background"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.laloosh.textmuse.ui.GotBadgeActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gotBadgeText"
            android:text="@string/explorer_congrats"
            android:gravity="center"
            android:textSize="32sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:focusable="false"
            android:focusableInTouchMode="false"
            />

        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:id="@+id/gotBadgeIcon"
            android:src="@drawable/explorer"
            android:focusable="false"
            android:focusableInTouchMode="false"
            />
    </LinearLayout>
</RelativeLayout>
