<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detailViewTextViewFavorite"
        android:text="Favorite"
        android:textAllCaps="true"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detailViewButtonSelectButton"
        android:layout_above="@id/detailViewTextViewFavorite"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detailViewImageViewSelect"
            android:src="@drawable/newbadge"
            android:scaleType="fitCenter"
            android:layout_alignBottom="@+id/detailViewTextViewSelect"
            android:layout_alignLeft="@+id/detailViewTextViewSelect"
            android:layout_alignRight="@+id/detailViewTextViewSelect"
            android:layout_alignTop="@+id/detailViewTextViewSelect"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detailViewTextViewSelect"
            android:text="Select"
            android:textSize="18sp"
            android:textColor="#ffffffff"
            android:textAllCaps="true"
            android:padding="15dp"
            />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@id/detailViewButtonSelectButton"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:id="@+id/detailViewImageViewImage"
            android:src="@drawable/bubble"
            android:scaleType="centerCrop"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:layout_above="@id/detailViewButtonSelectButton"
            android:id="@+id/detailViewLayoutText"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/detailViewImageViewLeftQuote"
                android:src="@drawable/leftquote"
                android:scaleType="fitCenter"
                android:layout_alignTop="@+id/detailViewTextViewText"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="8dp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/detailViewImageViewRightQuote"
                android:src="@drawable/rightquote"
                android:scaleType="fitCenter"
                android:layout_alignTop="@+id/detailViewTextViewText"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="8dp"
                />

            <com.laloosh.textmuse.controls.AutoResizeTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/detailViewTextViewText"
                android:text="This is the text contents."
                android:textSize="26sp"
                android:gravity="center"
                android:layout_toRightOf="@id/detailViewImageViewLeftQuote"
                android:layout_toLeftOf="@id/detailViewImageViewRightQuote"
                />

        </RelativeLayout>

    </LinearLayout>



</RelativeLayout>
