<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.laloosh.textmuse">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.SEND_SMS"></uses-permission>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <permission
        android:name="com.laloosh.textmuse.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.laloosh.textmuse.permission.C2D_MESSAGE" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/launcher_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".ContactsPickerActivity"
            android:label="@string/title_activity_contacts_picker"
            android:parentActivityName=".SelectMessageActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.laloosh.textmuse.SelectMessageActivity" />
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable_contacts" />

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HomeActivity"
            android:label="@string/title_activity_main_category"
            android:screenOrientation="portrait"
            android:theme="@style/AppNoActionBar" />
        <activity
            android:name=".SelectMessageActivity"
            android:label="@string/title_activity_select_message"
            android:launchMode="singleTop"
            android:parentActivityName=".HomeActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.laloosh.textmuse.HomeActivity" />
        </activity>
        <activity
            android:name=".GroupEditActivity"
            android:label="@string/title_activity_group_edit"
            android:parentActivityName=".ContactsPickerActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.laloosh.textmuse.ContactsPickerActivity" />
        </activity>
        <activity
            android:name=".ContactOnlyPickerActivity"
            android:label="@string/title_activity_contact_only_picker"
            android:parentActivityName=".GroupEditActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.laloosh.textmuse.GroupEditActivity" />
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable_contacts" />

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".broadcastreceivers.AlarmReceivedBroadcastReceiver"
            android:enabled="true"
            android:exported="false"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="com.laloosh.textmuse.alarmbroadcast.triggered" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".broadcastreceivers.BootTimeBroadcastReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".HomeActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.laloosh.textmuse.HomeActivity" />
        </activity>
        <activity
            android:name=".FeedbackActivity"
            android:label="@string/title_activity_feedback"
            android:parentActivityName=".SettingsActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.laloosh.textmuse.SettingsActivity" />
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="@string/title_activity_register"
            android:parentActivityName=".SettingsActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.laloosh.textmuse.SettingsActivity" />
        </activity>
        <activity
            android:name=".WalkthroughActivity"
            android:label="@string/title_activity_walkthrough"
            android:screenOrientation="portrait"
            android:theme="@style/AppNoActionBar"></activity>
        <activity
            android:name=".SplashScreenActivity"
            android:label="@string/title_activity_splash_screen"
            android:screenOrientation="portrait"
            android:theme="@style/AppNoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name="com.microsoft.windowsazure.notifications.NotificationsBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />

                <category android:name="com.laloosh.textmuse" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".SortableCategoryActivity"
            android:label="@string/title_activity_sortable_category"
            android:parentActivityName=".SettingsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.laloosh.textmuse.SettingsActivity" />
        </activity>
        <activity
            android:name=".WebviewActivity"
            android:label="@string/title_activity_webview"
            android:parentActivityName=".SelectMessageActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.laloosh.textmuse.SelectMessageActivity" />
        </activity>
        <activity
            android:name=".SkinSelectActivity"
            android:label="@string/title_activity_skin_select"></activity>

    </application>

</manifest>
