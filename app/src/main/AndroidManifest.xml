<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.laloosh.textmuse" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.SEND_SMS" >
    </uses-permission>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ContactsPickerActivity"
            android:label="@string/title_activity_contacts_picker"
            android:parentActivityName=".SelectMessageActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.laloosh.textmuse.SelectMessageActivity" />
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable_contacts" />

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainCategoryActivity"
            android:label="@string/title_activity_main_category"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SelectMessageActivity"
            android:label="@string/title_activity_select_message"
            android:parentActivityName=".MainCategoryActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.laloosh.textmuse.MainCategoryActivity" />
        </activity>
        <activity
            android:name=".GroupEditActivity"
            android:label="@string/title_activity_group_edit"
            android:parentActivityName=".ContactsPickerActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.laloosh.textmuse.ContactsPickerActivity" />
        </activity>
        <activity
            android:name=".ContactOnlyPickerActivity"
            android:label="@string/title_activity_contact_only_picker"
            android:parentActivityName=".GroupEditActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.laloosh.textmuse.GroupEditActivity" />
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable_contacts" />

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".broadcastreceivers.AlarmReceivedBroadcastReceiver"
            android:enabled="true"
            android:exported="false"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.laloosh.textmuse.alarmbroadcast.triggered" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".broadcastreceivers.BootTimeBroadcastReceiver"
            android:enabled="true"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>

        </receiver>
    </application>

</manifest>
